<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.brian.tienda.agregar">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/comic"
        android:text="Agregar Producto"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namess"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:hint="nombre del producto"

                android:textColorHint="@android:color/darker_gray"
                app:boxCornerRadiusTopEnd="10dp"

                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="?attr/colorOnPrimary"
                app:counterEnabled="true"
                app:counterMaxLength="70"

                app:counterTextColor="@android:color/darker_gray"

                app:endIconMode="clear_text"
                app:endIconTint="?attr/colorOnPrimary"
                app:hintEnabled="true"
                app:hintTextColor="?attr/colorOnPrimary"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="@+id/guideline16"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                app:startIconDrawable="@drawable/ic_si_glyph_cashier_machine"
                app:startIconTint="@android:color/darker_gray">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:fontFamily="@font/comic"
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHighlight="?attr/colorOnPrimary"
                    android:textColorHint="?attr/colorOnPrimary"
                    android:textColorLink="?attr/colorOnPrimary"
                    android:textCursorDrawable="?attr/colorOnPrimary"
                    android:textSize="20sp"
                    app:hintTextColor="?attr/colorOnPrimary">


                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namesss"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:hint="precio"

                android:textColorHint="@android:color/darker_gray"
                app:boxCornerRadiusTopEnd="10dp"

                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="?attr/colorOnPrimary"
                app:counterEnabled="true"
                app:counterMaxLength="70"

                app:counterTextColor="@android:color/darker_gray"

                app:endIconMode="clear_text"
                app:endIconTint="?attr/colorOnPrimary"
                app:hintEnabled="true"
                app:hintTextColor="?attr/colorOnPrimary"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="@+id/guideline16"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                app:startIconDrawable="@drawable/ic_si_glyph_cashier_machine"
                app:startIconTint="@android:color/darker_gray">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/prices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:fontFamily="@font/comic"
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHighlight="?attr/colorOnPrimary"
                    android:textColorHint="?attr/colorOnPrimary"
                    android:textColorLink="?attr/colorOnPrimary"
                    android:textCursorDrawable="?attr/colorOnPrimary"
                    android:textSize="20sp"
                    app:hintTextColor="?attr/colorOnPrimary">


                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/stoksss"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:hint="stock"

                android:textColorHint="@android:color/darker_gray"
                app:boxCornerRadiusTopEnd="10dp"

                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="?attr/colorOnPrimary"
                app:counterEnabled="true"
                app:counterMaxLength="70"

                app:counterTextColor="@android:color/darker_gray"

                app:endIconMode="clear_text"
                app:endIconTint="?attr/colorOnPrimary"
                app:hintEnabled="true"
                app:hintTextColor="?attr/colorOnPrimary"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="@+id/guideline16"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                app:startIconDrawable="@drawable/ic_si_glyph_cashier_machine"
                app:startIconTint="@android:color/darker_gray">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/stocks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:fontFamily="@font/comic"
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHighlight="?attr/colorOnPrimary"
                    android:textColorHint="?attr/colorOnPrimary"
                    android:textColorLink="?attr/colorOnPrimary"
                    android:textCursorDrawable="?attr/colorOnPrimary"
                    android:textSize="20sp"
                    app:hintTextColor="?attr/colorOnPrimary">


                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descripsss"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:hint="descripcion"

                android:textColorHint="@android:color/darker_gray"
                app:boxCornerRadiusTopEnd="10dp"

                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="?attr/colorOnPrimary"
                app:counterEnabled="true"
                app:counterMaxLength="70"

                app:counterTextColor="@android:color/darker_gray"

                app:endIconMode="clear_text"
                app:endIconTint="?attr/colorOnPrimary"
                app:hintEnabled="true"
                app:hintTextColor="?attr/colorOnPrimary"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="@+id/guideline16"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                app:startIconDrawable="@drawable/ic_si_glyph_cashier_machine"
                app:startIconTint="@android:color/darker_gray">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descripcions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:fontFamily="@font/comic"
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHighlight="?attr/colorOnPrimary"
                    android:textColorHint="?attr/colorOnPrimary"
                    android:textColorLink="?attr/colorOnPrimary"
                    android:textCursorDrawable="?attr/colorOnPrimary"
                    android:textSize="20sp"
                    app:hintTextColor="?attr/colorOnPrimary">


                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton

                android:id="@+id/add"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/comic"
                android:onClick="add"
                android:text="agregar"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline18"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="@+id/guideline16"
                app:layout_constraintTop_toBottomOf="@+id/rol"
                app:strokeColor="?attr/colorOnPrimary">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>